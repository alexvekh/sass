<div class='page'>
  <div class='header'>
    {{#with header}}
      <header class='header__content'>
        <div class='header__block'>
          <img src='/svg/apple.svg' alt='apple logo' class='header__icon' />
          <nav class='header__block'>
            {{#each links}}
              <a href='{{url}}' class='header__link'>{{text}}</a>
            {{/each}}
          </nav>
        </div>

        <div class='header__block'>
          <img src='/svg/search.svg' alt='search' class='header__icon' />
          <img src='/svg/profile.svg' alt='' class='header__icon' />
        </div>
      </header>
    {{/with}}
  </div>
  <section class='ad__content'>
    {{#with ad}}
      <div class='header__block'>{{title}}</div>
      <div class='header__block'>
        <a href='{{link.url}}' class='add__link'>{{link.text}} > </a>
      </div>
    {{/with}}
  </section>

  <section class='product product--big product--iphone-pro product--dark product--top'>
    {{#with iphone_pro}}
      <div class='product__content'>
        <h1 class='product__title'>{{title}}</h1>
        <p class='product__description'>{{descriptions}} </p>
        <div class='product__action'>
          {{#with link}}
            {{#each text}}
              <a href='{{../link}}' class='product__link'>{{this}}</a>
            {{/each}}
          {{/with}}

        </div>
      </div>
    {{/with}}
  </section>

